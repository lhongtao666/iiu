<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="[JT] %-d{yyyy-MM-dd HH:mm:ss} %p [%t] %c{1}.%M(%L) | %m%n" />
		</layout>
	</appender>

	<appender name="APPLOGFILE" class="org.apache.log4j.JTDailyRollingFileAppender">
		<param name="encoding" value="UTF-8" />
		<param name="File" value="${webapp.root}/WEB-INF/logs/ecm.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[JT] %-d{yyyy-MM-dd HH:mm:ss} %-5p %-15c{1}: %m%n" />
		</layout>
	</appender>

	<logger name="java.sql.Connection">
		<level value="ERROR" />
	</logger>
	<logger name="java.sql.Statement">
		<level value="ERROR" />
	</logger>
	<logger name="java.sql.PreparedStatement">
		<level value="ERROR" />
	</logger>
	<logger name="org.apache.activemq">
		<level value="WARN" />
	</logger>
	<logger name="com.mchange">
		<level value="WARN" />
	</logger>
	<logger name="com.alibaba">
		<level value="WARN" />
	</logger>
	<logger name="net.bull">
		<level value="ERROR" />
	</logger>
	<logger name="net.sf">
		<level value="ERROR" />
	</logger>
	<logger name="com.ibatis">
		<level value="ERROR" />
	</logger>
	<logger name="com.ibatis.common.jdbc.SimpleDataSource">
		<level value="ERROR" />
	</logger>
	<logger name="com.ibatis.common.jdbc.ScriptRunner">
		<level value="DEBUG" />
	</logger>
	<logger name="com.ibatis.sqlmap.engine.impl.SqlMapClientDelegate">
		<level value="WARN" />
	</logger>

	<logger name="org.springframework">
		<level value="WARN" />
	</logger>
	<logger name="java.sql.ResultSet">
		<level value="WARN" />
	</logger>

	<logger name="java.sql">
		<level value="DEBUG" />
	</logger>

	<logger name="org.apache.ibatis">
		<level value="ERROR" />
	</logger>

	<logger name="org.mybatis">
		<level value="WARN" />
	</logger>

	<logger name="org.mybatis.spring">
		<level value="ERROR" />
	</logger>

	<logger name="org.logicalcobwebs.proxool">
		<level value="ERROR" />
	</logger>

	<logger name="org.apache">
		<level value="ERROR" />
	</logger>

	<logger name="com.jt.base.web.servlet.SpringMvcServlet">
		<level value="ERROR" />
	</logger>

	<logger name="org.displaytag">
		<level value="ERROR" />
	</logger>
	<logger name="com.jt">
		<level value="WARN" />
	</logger>
	<logger name="com.jt.base.core">
		<level value="WARN" />
	</logger>
	<logger name="com.jt.base.web.servlet">
		<level value="ERROR" />
	</logger>

	<logger name="org.activiti">
		<level value="ERROR" />
	</logger>

	<logger name="org.apache.catalina">
		<level value="ERROR" />
	</logger>

	<logger name="org.quartz">
		<level value="ERROR" />
	</logger>

	<logger name="freemarker">
		<level value="ERROR" />
	</logger>

	<logger name="org.mongodb">
		<level value="WARN" />
	</logger>

	<logger name="com.mongodb">
		<level value="WARN" />
	</logger>

	<root>
		<level value="INFO,stdout,logfile" />
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="APPLOGFILE" />
	</root>

</log4j:configuration>
