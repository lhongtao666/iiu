<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
            http://www.springframework.org/schema/beans/spring-beans.xsd  
            http://code.alibabatech.com/schema/dubbo  
            http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="t9-ecm-web" />

	<!-- 使用zookeeper注册中心暴露服务地址 -->
	<dubbo:registry protocol="zookeeper" address="${zookeeper.address}" />

	<!-- 用dubbo协议在20881端口暴露服务 -->
	<dubbo:protocol name="dubbo" port="20887" dispatcher="all" threadpool="fixed" threads="200"/>
	
	<!-- 微信好友服务接口 -->
	<dubbo:service interface="com.jt.wx.service.WeixinFriendsService" ref="weixinFriendsService" retries="0" timeout="30000"/>
	<!-- 微信记录接口 -->
	<dubbo:service interface="com.jt.wx.service.WeixinRecordService" ref="weixinRecordService" retries="0" timeout="30000"/>
	<!-- 安卓微信服务接口 -->
	<dubbo:service interface="com.jt.wx.android.service.AndroidWxResponseService" ref="androidWxResponseService" retries="0" timeout="60000"/>

</beans>